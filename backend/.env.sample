# Port for the Express server and WebSocket server
# Default: 4000
PORT=4000

# Optional: simple API key to protect Arduino/bridge endpoints
# If set, the bridge/simulator should send this header: x-api-key: <API_KEY>
# Leave empty to disable API key checking
API_KEY=

# Timezone/locale (optional)
# TZ=UTC

# Logging level (optional): debug/info/warn/error
LOG_LEVEL=info

# NOTE: Other tools/scripts use BACKEND_HOST to point at this service
# Example: http://your-host.example.com or https://your-host.example.com
# Backend host is not required by the server itself but is useful for clients/bridge
BACKEND_HOST=http://localhost:4000

# Serial defaults (used by serial-bridge.js)
# Example Windows: COM3  Example Linux: /dev/ttyUSB0
SERIAL_PORT=COM3
SERIAL_BAUD=9600

# Pairing window used by bridge in milliseconds (optional override)
PAIR_WINDOW_MS=10000
